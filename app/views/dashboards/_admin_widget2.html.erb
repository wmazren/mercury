<div class="widget widget-table action-table">
  <div class="widget-header">
		<i class="icon-th-list"></i>
		  <h3>Table</h3>
	</div> <!-- /widget-header -->
	
	<div class="widget-content">
	  <table class="table table-striped table-bordered">
		  <thead>
			  <tr>
				  <th>Description</th>
				  <th class="td-actions"></th>
			  </tr>
		  </thead>
			<tbody>
			  <% if @period_for_first_time <= 0 %>
				  <tr>
					  <td>You dont have a period defined. Please create one by clicking <%= link_to "here", new_period_path %>.</td>
					  <td class="td-actions">
						  <a href="javascript:;" class="btn btn-small btn-success">
							  <i class="btn-icon-only icon-ok"></i>										
						  </a>
						
						  <a href="javascript:;" class="btn btn-small btn-danger">
							  <i class="btn-icon-only icon-remove"></i>										
						  </a>
					  </td>
				  </tr>
				<% end %>
				
				<tr>
					<td>You have user that does not have review.</td>
					<td class="td-actions">
						<a href="javascript:;" class="btn btn-small btn-success">
							<i class="btn-icon-only icon-ok"></i>										
						</a>
						
						<a href="javascript:;" class="btn btn-small btn-danger">
							<i class="btn-icon-only icon-remove"></i>										
						</a>
					</td>
				</tr>
		  </tbody>
		</table>
	</div> <!-- /widget-content -->
</div> <!-- /widget -->
