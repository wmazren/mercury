<div class="span8">
  <div class="widget widget-nopad">
    <div class="widget-header">
	    <i class="icon-list-alt"></i>
	    <h3>My Goals</h3>
    </div> <!-- /widget-header -->

    <div class="widget-content">
	    <ul class="news-items">
	      <% @goals.each do |goal| %>
	      <li>
			    <div class="news-item-detail">										
				    <a <%= link_to goal.title, edit_goal_path(goal) %></a>
				    <p class="news-item-preview"><%= truncate goal.description, length: 200 %></p>
			    </div>
			
			    <div class="news-item-date">
				    <span class="news-item-day"><%= number_to_percentage(goal.progress.percent_complete, :precision => 0) %></span>
				    <span class="news-item-month"><%= link_to 'Progress', edit_progress_path(goal.progress), :class => 'btn btn-mini btn-warning' %></span>
			    </div>
		    </li>
		    <% end %>
	    </ul>
	    <div class="form-actions">
        <%= link_to "Add New Goal", new_goal_path, :class => 'btn btn-primary' %>
      </div>
    </div> <!-- /widget-content -->
  </div> <!-- /widget -->	
</div> <!-- /span8 -->
