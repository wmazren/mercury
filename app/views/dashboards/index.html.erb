<div class="page-header">
  <h1>User Dashboard</h1>
</div>

<div class="row">
  <div class="span9">
    <% if user_signed_in? %>
      <% if current_user.role == "admin" %>
        <%= render 'dashboards/admin_dashboard' %>
      <% else %>
        <%= render 'dashboards/user_dashboard' %>
      <% end %>
    <% end %>
    <% if current_user.sign_in_count == 0 %>
      <%= render 'dashboards/first_time' %>
    <% end %>
  </div>
  <div class="span3">
    <%= render 'dashboards/sidebar' %>
  </div>
</div>
