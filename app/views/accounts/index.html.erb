<h1>All Accounts</h1><br>

<table class="table table-striped">
  <thead>
	  <tr>
	    <th>ID</th>
		  <th>Account Name</th>
		  <th>Subdomain</th>
		  <th>Subdomain</th>
		  <th>Action</th>
	  </tr>
  </thead>
  <tbody>
	  <% @accounts.each do |account| %>
	  <tr>
	    <td><%= account.id %></td>
	    <td><%= link_to account.name, account_path(account) %></td>
		  <td><%= account.subdomain %></td>
		  <td>
		    <%= link_to "Edit", edit_account_path(account), :class => 'btn btn-mini' %>
		    <%= link_to 'Destroy', account, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>			    
		  </td>
	  </tr>
	  <% end %>
  </tbody>
</table>
