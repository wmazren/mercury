<h1>All Goals</h1>

<table class="table table-striped">
  <thead>
	  <tr>
	    <th>ID</th>
		  <th>Title</th>
		  <th>Description</th>
		  <th>Start Date</th>
		  <th>Due Date</th>
		  <th>User</th>
		  <th>Review</th>
		  <th>Action</th>
		  <th></th>
		  <th></th>
	  </tr>
  </thead>
  <tbody>
	  <% @goals.each do |goal| %>
	  <tr>
	    <td><%= goal.id %></td>
	    <td><%= link_to goal.title, goal_path(goal) %></td>
		  <td><%= goal.description %></td>
		  <td><%= goal.start_date %></td>
		  <td><%= goal.due_date %></td>
		  <td><%= goal.user.email %></td>
		  <td><%= goal.review.id %></td>
		  <td>
		    <%= link_to "Edit", edit_goal_path(goal), :class => 'btn btn-mini' %>
		    <%= link_to 'Destroy', goal, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %>			    
		  </td>
	  </tr>
	  <% end %>
  </tbody>
</table>

<p><%= link_to "New Goal", new_goal_path, :class => 'btn btn-primary' %></p>
